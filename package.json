{
  "name": "ecoleta-back",
  "version": "1.0.0",
  "main": "dist/src/server.js",
  "repository": "git@github.com:mrocha98/ecoleta-back.git",
  "author": "Matheus Rocha <matheus_rocha98@outlook.com>",
  "license": "BSD-2-Clause",
  "scripts": {
    "build": "tsc",
    "db:migrate": "knex --knexfile knexfile.ts migrate:latest",
    "db:rollback": "knex --knexfile knexfile.ts migrate:rollback",
    "db:seed": "knex --knexfile knexfile.ts seed:run",
    "heroku-postbuild": "yarn db:migrate && yarn db:seed",
    "prestart": "yarn build",
    "start:dev": "cross-env NODE_ENV=development ts-node-dev --transpileOnly --ignore-watch node_modules src/server.ts",
    "start": "node dist/src/server.js"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.2",
    "express": "^4.17.1",
    "helmet": "^3.22.0",
    "http-status-codes": "^1.4.0",
    "knex": "^0.21.1",
    "morgan": "^1.10.0",
    "pg": "^8.2.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.6",
    "@types/helmet": "^0.0.47",
    "@types/morgan": "^1.9.0",
    "@typescript-eslint/eslint-plugin": "^3.0.2",
    "@typescript-eslint/parser": "^3.0.2",
    "commitizen": "^4.1.2",
    "cz-conventional-changelog": "3.2.0",
    "dotenv": "^8.2.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "prettier": "^2.0.5",
    "ts-node": "^8.10.2",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.9.3"
  },
  "engines": {
    "node": "12.17.x",
    "yarn": "1.22.x"
  }
}
